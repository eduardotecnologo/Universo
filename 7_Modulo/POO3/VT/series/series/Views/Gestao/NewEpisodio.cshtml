@model series.DTO.EpisodioDTO
@{
  Layout = "_LayoutAdmin";
}
<h3>Cadastrar um novo episódio de uma série</h3>
<form class="form-horizontal" asp-controller="Episodios" asp-action="Save" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Name">Digite o nome do episódio:</label>
    <input type="hidden" asp-for="Id" value="0">
    <input type="text" asp-for="Name" class="form-control" placeholder="Digite aqui..."><br>

    <label asp-for="Name">Digite o número do episódio:</label>
    <input type="number" asp-for="Name" class="form-control" placeholder="Digite aqui..."><br>


    <label asp-for="Season">Digite o número da Temporada:</label>
    <input asp-for="Season" class="form-control" placeholder="Digite aqui..."><br>


    <label asp-for="Evaluation">Digite a avaliação do episódio:</label>
    <input asp-for="Evaluation" class="form-control" placeholder="Digite aqui..."><br>



    <button class="btn btn-success">Cadastrar</button>
</form>